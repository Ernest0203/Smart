.team
  background-color #fbfbfb
  padding 140px 0 170px
  &__title
    margin-bottom 0
  &__desc
    margin-bottom 130px
    text-align center
    
  .team-list
    &__item 
      column(ratios = 4/12)
      background-color #fff3f0
      box-shadow 0 0 2px rgba(20, 20, 21, 0.6)
      cursor pointer
      position relative
      padding-top 15%
      @media(max-width: 580px)
        column(ratios = 4/6)
        center(max-width: 80%)
        margin-bottom 35px
        &:nth-child(3)
          margin-right 52px
      .item-overlay
        background-color #ff5c36
        content ''
        display block
        height 100%
        width 100%
        position absolute
        top 0
        right 0
        left 0
        bottom 0
        opacity 1
        z-index 1
        transition .3s
      &:hover
        box-shadow 0 0 49px rgba(20, 20, 21, 0.11)
      &:hover .item-overlay
        opacity 0
      &:hover .preview-info
        opacity 0
        z-index -1
    .profile
      text-align center
      &__skills
        margin 0 0 80px 0
      &__skill
        font-size 11px
        margin 0 auto
        margin-bottom 13px
        width 150px
        &:nth-child(2)
          span:before
            width 70%
        &:nth-child(3)
          span:before
            width 75%
        span 
          background-color #707070
          border-radius 2px
          display block
          height 4px
          margin-top 5px
          position relative
          &:before
            background-color #ff6e47
            content ''
            display block
            height 4px
            width 80%
            position absolute
            top 0
      &__info
        .name
          color rgba(32, 32, 32, 0.85)
          font-size 30px
        .position
          color rgba(255, 114, 76, 0.9)
          font-size 17px
          font-weight 300
        .social
          margin 15px 0
          a 
            margin-right 10px
            i 
              color rgb(224, 208, 204)
    .preview-info
      background-color white
      border-radius 2px
      box-shadow 1px 5.9px 16px rgba(20, 20, 21, 0.08)
      padding 20px 0
      text-align center
      position absolute
      bottom -5% 
      left 13.5%
      width 72.7%
      z-index 1
      transition 0.2s
      .name
        color rgba(0,0,0,0.7)
        font-size 30px
        margin-bottom 5px
        @media(max-width: 785px)
          font-size 20px
      .position
        color rgba(0,0,0,0.7)
        font-weight 300