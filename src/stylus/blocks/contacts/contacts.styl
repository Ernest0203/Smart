.contacts
  background-color #f7f7f7
  padding 40px 0
  text-align center
  &__btn
    background-color #fdfdfd
    border-radius 27px
    border 1px solid rgba(1, 2, 2, 0.07)
    box-shadow 1.9px 10.8px 20px rgba(20, 20, 21, 0.07)
    color rgba(0,0,0,1)
    display block
    height 55px
    line-height 55px
    margin 0 auto
    margin-bottom 45px
    text-align center
    width 240px
  &__social
    column(ratios = 6/12, gutter = 10)
    text-align right
    @media(max-width: 700px)
      column(ratios = 6/6, gutter = 1)
    a
      background-color lightgray
      border-radius 50%
      color white
      display inline-block
      height 53px
      line-height 53px
      margin-right 15px
      width 53px
      text-align center
      @media(max-width: 700px)
        &:nth-of-type(4)
          margin-right 0
      &:hover
        background-color orange-light
        box-shadow 0 0 23px rgba(20, 20, 21, 0.29)
  &__copyright
    column(ratios = 6/12)
    color rgba(4, 4, 4, .6)
    font-size 17px
    padding-left 10px
    line-height 53px
    text-align left
    @media(max-width: 700px)
      column(ratios = 4/4)
    