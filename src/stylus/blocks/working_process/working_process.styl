.working-process
  cf()
  background-color white
  padding 140px 0 180px 0
  &__desc
    color rgba(65, 65, 65, 0.7)
    margin-bottom 110px
    text-align center
    
  .process-list
    &__item
      column(ratios = 3/12)
      @media(max-width: 970px)
        column(ratios = 4/8, cycle = 2)
        margin-bottom 40px
        text-align center
        &:nth-child(2)
          margin-right 0
      color white
      padding 4.5% 3.9% 5.7%
      position relative
      text-align center
      transition .2s
      &:hover
        box-shadow 0 0 35px rgba(20, 20, 21, 0.21)
        .item-btn
          box-shadow 1px 5.9px 14px rgba(20, 20, 21, 0.09)
      &:nth-child(1)
        background-color #4eb2f7
      &:nth-child(2)
        background-color #c049f8
      &:nth-child(3)
        background-color #817eff
      &:nth-child(4)
        background-color: #f74770
        i 
          transform rotate(-20deg)
                  
    i 
      height 50px
      width 50px
      margin-bottom 20px
      opacity 0.8
    .item-title
      font-size 20px
      margin-bottom 25px
      opacity 0.9
    .item-text
      font-size 15px
      opacity 0.75
    .item-btn
      background-color white
      border-radius 27px
      box-shadow 0 0 14px rgba(20, 20, 21, 0.05)
      color rgba(0,0,0,0.8)
      display block
      height 55px
      line-height 55px
      text-align center
      width 88%
      padding-left 32px
      position absolute
      bottom -27.5px
      right 6%
      transition .2s
      .plus
        display block
        height 1px
        width 17px
        background-color rgba(0,0,0,0.5)
        position absolute
        bottom 49%
        left 23%
        &:before
          content ''
          display block
          height 16px
          width 1px
          background-color rgba(0,0,0,0.5)
          position absolute
          bottom -7px
          left 8px
        
    